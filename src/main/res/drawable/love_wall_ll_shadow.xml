<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- layout background -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="#FFFFFF"
                android:startColor="#c7c7c7" />
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="4dp"
        android:right="4dp">
        <!-- show rectangle area -->
        <shape android:shape="rectangle">

            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>
