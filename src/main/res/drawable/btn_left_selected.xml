<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />

            <solid android:color="@color/btn_selected" />
        </shape>
    </item>
        <item android:state_pressed="true" >
            <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <solid android:color="@color/btn_selected" />
            </shape>
        </item>
    <item ><shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />

            <stroke android:width="1dp" android:color="@color/btn_stroke" />
        </shape></item>

</selector>