<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_begin_live_setting">


    <TextView
        style="@style/balance_time_line_medium_text"
        android:layout_marginTop="5dp"
        android:text="选择标签:" />

    <com.ramo.campuslive.view.FlowLayout
        android:id="@+id/begin_live_flowLayout_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            style="@style/whiteTv"
            android:text="换一批" />

        <ImageView
            android:id="@+id/begin_live_exchange_permissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/begin_live_exchange_permissions_bg" />
    </LinearLayout>
</merge>