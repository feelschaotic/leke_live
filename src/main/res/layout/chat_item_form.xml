<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_form_msg_date"
        style="@style/chat_date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout style="@style/chat_head_ll">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/head" />

            <TextView
                android:singleLine="true"
                android:id="@+id/item_form_msg"
                style="@style/balance_time_line_medium_text"
                android:text="@string/userName" />
        </LinearLayout>

        <TextView
            android:id="@+id/form_msg_text"
            style="@style/chat_content"
            android:background="@drawable/chat_item_text_bg_left" />
    </LinearLayout>

</LinearLayout>