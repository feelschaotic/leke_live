<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:padding="15dp">

        <com.ramo.campuslive.view.CircleImageView2
            android:id="@+id/fans_head"
            app:border_color="@color/white"
            app:border_width="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/head" />

        <LinearLayout
            android:id="@+id/layout_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/fans_head"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contribution_name"

                    style="@style/balance_time_line_big_text"
                    android:textColor="@color/white"
                    android:text="New Text"
                    android:textStyle="bold" />

               <!-- <ImageView
                    android:id="@+id/contribution_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/v1" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/fans_desc"
                style="@style/balance_time_line_small_text"
                android:background="@drawable/school_shape_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text" />
        </LinearLayout>
        <Button
            android:id="@+id/teme_to_see_btn"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看直播"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/cpb_red"
            android:textSize="16sp"
            android:textColor="@color/white"/>

    </RelativeLayout>
