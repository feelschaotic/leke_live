<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_above="@id/include"
    android:layout_alignParentRight="true"
    android:background="#9e000000"
    android:orientation="vertical"
    android:visibility="gone">
    <!--android:visibility="gone"-->
    <Button
        android:id="@+id/dang_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:background="@drawable/dan_colse" />
    <!--channel_p_del-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="弹幕位置："
            android:textColor="#ffffff"
            android:textSize="15dp" />
        <!--<Button
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mini_operate_layout_middle_pop_switchlogo_bg_selected"/>-->
        <!--android:background="@drawable/checkswitch_bottom"-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/scrollto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dang_all"
                android:layout_width="45dp"
                android:layout_height="70dp"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/dang_all_bg"
                android:gravity="center"
                android:text="全屏"
                android:textColor="#ffffff" />

            <RadioButton
                android:id="@+id/dang_bottom"
                android:layout_width="45dp"
                android:layout_height="70dp"
                android:button="@null"
                android:drawableTop="@drawable/dang_bottom_bg"
                android:gravity="center"
                android:text="下方"
                android:textColor="#ffffff" />

            <RadioButton
                android:id="@+id/dang_top"
                android:layout_width="45dp"
                android:layout_height="70dp"
                android:button="@null"
                android:drawableTop="@drawable/dang_top_bg"
                android:gravity="center"
                android:text="上方"
                android:textColor="#ffffff" />
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:text="弹幕颜色："
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/set_color"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/dang_color"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/red"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:button="@null" />

            <RadioButton
                android:id="@+id/white"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:button="@null" />

            <RadioButton
                android:id="@+id/blue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/blue"
                android:button="@null" />

            <RadioButton
                android:id="@+id/lv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:button="@null" />

            <RadioButton
                android:id="@+id/mured"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:button="@null" />

            <RadioButton
                android:id="@+id/gree"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@null" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>