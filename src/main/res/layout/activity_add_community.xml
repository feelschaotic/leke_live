<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        style="@style/bgStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/begin_live_back_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:src="@drawable/abc_ic_clear_mtrl_alpha" />

        <EditText
            android:id="@+id/socityName"
            style="@style/whiteTv"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:hint="社团名称"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColorHint="#ffffff" />
        <TextView
            style="@style/balance_time_line_medium_text"
            android:text="社团簡介"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:background="@drawable/btn_shape">
        <EditText
            android:id="@+id/socityDesc"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColorHint="#ffffff" />
            <TextView
                android:layout_gravity="right"
                style="@style/balance_time_line_small_text"
                android:text="0 / 200"
                android:id="@+id/add_comm_desc_length_tv" />
        </LinearLayout>
        <TextView
          style="@style/balance_time_line_medium_text"
            android:text="上传社团logo"
           />

        <ImageView
            android:id="@+id/socityLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/upload_pictures_plus" />
        <Button
            android:id="@+id/add_community_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/begin_live_btn_bg"
            android:text="创建社团"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cpb_blue" />
    </LinearLayout>
</ScrollView>