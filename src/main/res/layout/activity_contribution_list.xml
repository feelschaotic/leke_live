<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bgStyle"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout style="@style/topbar">

            <ImageView style="@style/topbar_back" />

            <TextView
                style="@style/topbar_text"
                android:text="粉丝榜" />
        </RelativeLayout>

        <include
            android:id="@+id/contribution_top1"
            layout="@layout/activity_contribution_list_item_top1" />
        <View
            style="@style/coarse_hr_hor"></View>
        <include
            android:id="@+id/contribution_top2"
            layout="@layout/activity_contribution_list_item_top2" />
        <View
            style="@style/coarse_hr_hor"></View>
        <include
            android:id="@+id/contribution_top3"
            layout="@layout/activity_contribution_list_item_top3" />
        <View
            style="@style/coarse_hr_hor"></View>
        <ListView
            android:id="@+id/contribution_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
</ScrollView>