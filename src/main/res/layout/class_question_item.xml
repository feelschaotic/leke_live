<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/question_user_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/xiao"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/answer_user_name" />
        <TextView
            android:id="@+id/question_user_name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="追逐者"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/question_content"
            android:layout_alignStart="@+id/question_content" />
        <TextView
            android:id="@+id/question_time"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="2016-04-15"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/question_content"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:text="只要存在计算机,总会遇到计算机崩溃现象,蓝屏、死机以及令人费解的窗口警告等。你可能无法抑制住自己的焦虑,不断试图点击鼠标。科技媒体TechRepubli..."
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/answer_user_head"
            android:layout_marginTop="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#66000000"/>

</RelativeLayout>