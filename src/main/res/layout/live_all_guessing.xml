<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_marginRight="-250dp"
    android:layout_marginTop="60dp"
    android:background="@drawable/linearlayout_shape_black"
    android:orientation="vertical"
    android:padding="7dp">

    <ImageView
        android:id="@+id/live_guess_closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:src="@drawable/download_delete_selector" />

    <TextView
        style="@style/balance_time_line_medium_text"
        android:text="直播竞猜" />

    <Button
        style="@style/balance_time_line_small_text"
        android:id="@+id/live_add_guess"
        android:layout_gravity="right"
        android:background="@drawable/btn_shape"
        android:padding="5dp"
        android:text="发起竞猜" />

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/live_guess_lv"
        style="@style/baseListView"
        android:dividerHeight="7dp"></ListView>
</LinearLayout>