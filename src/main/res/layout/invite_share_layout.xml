<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_begin_live_setting">


    <TextView
        android:id="@+id/live_permissions_open_tv"
        style="@style/balance_time_line_medium_text"
        android:layout_marginTop="15dp"
        android:text="通知好友来围观" />

    <LinearLayout
        android:id="@+id/live_permissions_open_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/launch_qq_on" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/launch_qqzone_off" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/launch_wechat_off" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/launch_weibo_off" />
    </LinearLayout>

    <View
        android:id="@+id/live_permissions_open_hr"
        style="@style/coarse_hr_hor"
        android:layout_marginBottom="20dp" />
</merge>